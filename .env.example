# ─── Backend ──────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
FRONTEND_URL=https://openadeia.org

# JWT (change in production!)
JWT_SECRET=change-me-in-production

# ─── PostgreSQL ────────────────────────────────────────────────────
DATABASE_URL=postgres://eadeies:eadeies@localhost:5432/eadeies
# Or individual vars:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=eadeies
# DB_USER=eadeies
# DB_PASS=eadeies

# ─── Redis ────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── MinIO (S3-compatible storage) ────────────────────────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=permits

# ─── Keycloak (OIDC) ──────────────────────────────────────────────
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=eadeies
KEYCLOAK_CLIENT_ID=eadeies-backend

# ─── SMTP (outgoing email) ────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@email.com
SMTP_PASS=your-app-password
SMTP_FROM="e-Άδειες Manager <your@email.com>"

# ─── IMAP (incoming email listener) ──────────────────────────────
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_TLS=true
IMAP_USER=your@email.com
IMAP_PASS=your-app-password

# ─── Meilisearch ──────────────────────────────────────────────────
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=masterkey

# ─── Frontend (Vite) ──────────────────────────────────────────────
VITE_API_URL=http://localhost:4000
